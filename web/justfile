# List available commands
default:
    just --list --unsorted --list-heading $'Available commands\n'

run-dev: build-locales
    #!/bin/zsh

    npm run dev

bootstrap:
    #!/bin/zsh

    just install-modules

build-locales: install-modules
    #!/bin/zsh

    npm run locales:build

typecheck: install-modules
    #!/bin/zsh

    npm run typecheck

[private]
install-modules:
    #!/bin/zsh

    npm i
