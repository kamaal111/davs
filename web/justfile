set dotenv-load

# List available commands
default:
    just --list --unsorted --list-heading $'Available commands\n'

run-dev: install-modules build-locales
    #!/bin/zsh

    export ENCRYPTION_SECRET_KEY="super_secret-123"
    export DAVS_SERVER_BASE_URL="http://host.docker.internal:8000"

    pnpm run dev

test:
    pnpm run test

lint:
    pnpm run lint

format:
    pnpm run format

bootstrap: install-modules

build-locales:
    pnpm run locales:build

typecheck:
    pnpm run typecheck
    just typecheck

[private]
install-modules:
    pnpm i
